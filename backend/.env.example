# Environment
NODE_ENV=development
PORT=3000

# Application
APP_NAME=SupportCarr
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/supportcarr
MONGODB_URI_TEST=mongodb://localhost:27017/supportcarr_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (for PII fields)
ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PLATFORM_FEE_PERCENT=20

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=supportcarr-uploads

# Email (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=SupportCarr <noreply@supportcarr.com>

# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Mapbox
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# Application Settings
MAX_DRIVER_SEARCH_RADIUS_KM=50
BASE_RESCUE_PRICE=25
PRICE_PER_KM=2.5
DRIVER_PAYOUT_PERCENT=80
SURGE_PRICING_ENABLED=false
AUTO_ACCEPT_TIMEOUT_MINUTES=5

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# API Keys (for partner integrations)
API_KEY_SALT=your-api-key-salt-change-this

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# Session
SESSION_SECRET=your-session-secret-change-this

# Feature Flags
FEATURE_UTILITY_TASKS=true
FEATURE_SCHEDULED_PICKUPS=true
FEATURE_CORPORATE_ACCOUNTS=false
